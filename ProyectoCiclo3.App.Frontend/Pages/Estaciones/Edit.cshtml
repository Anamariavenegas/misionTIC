@page
@model ProyectoCiclo3.App.Frontend.Pages.EditEstacionModel
@{
    var estacion = Model.Estacion;
}

<div class="text-center">
  <form method="post">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-6 col-md-auto col-lg-4">
          <label for="id" class="form-label">Digite el ID:</label>
          <input type="number" class="form-control" id="id" name="id" placeholder="Id" asp-for="@estacion.id">
        </div>
        <div class="col-6 col-md-auto col-lg-4">
          <label for="marca" class="form-label">Digite el nombre:</label>
          <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre"asp-for="@estacion.nombre">
        </div>
        <div class="col-6 col-md-auto col-lg-4">
          <label for="modelo" class="form-label">Digite direccion:</label>
          <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion" asp-for="@estacion.direccion">
        </div>
        <div class="col-6 col-md-4 col-lg-4">
          <label for="kilometraje" class="form-label">Digite coordenada X:</label>
          <input type="number" class="form-control" id="coord_x" name="coord_x" placeholder="Coord_x" asp-for="@estacion.coord_x">
        </div>
        <div class="col-6 col-md-4 col-lg-4">
          <label for="numero_asientos" class="form-label">Digite coordenada Y:</label>
          <input type="number" class="form-control" id="coord_y" name="coord_y"placeholder="Coord_y" asp-for="@estacion.coord_y">
        </div>
        <div class="col-6 col-md-4 col-lg-4">
          <label for="Placa" class="form-label">Digite el tipo de estacion:</label>
          <input type="text" class="form-control" id="tipo" name="tipo" placeholder="Tipo" asp-for="@estacion.tipo">
        </div>
      </div>
      <br>

    </div>


    <hr>
    <button type="submit" class="btn btn-success" style="font-family: cursive;color:black">  &nbspEnviar&nbsp  </button>


  </form>
</div>