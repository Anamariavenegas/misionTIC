@page
@model ProyectoCiclo3.App.Frontend.Pages.EditRutaModel
@{
    var ruta = Model.Ruta;
}

<div class="text-center">
  <form method="post">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-6 col-md-auto col-lg-4">
          <label for="id" class="form-label">Digite el ID:</label>
          <input type="number" class="form-control" id="id" name="id" placeholder="Id" asp-for="@ruta.id">
        </div>
        <div class="col-6 col-md-auto col-lg-4">
          <label for="origen" class="form-label">Digite el origen:</label>
          <input type="number" class="form-control" id="origen" name="origen" placeholder="Origen" asp-for="@ruta.origen">
        </div>
        <div class="col-6 col-md-auto col-lg-4">
          <label for="destino" class="form-label">Digite el destino:</label>
          <input type="number" class="form-control" id="destino" name="destino" placeholder="Destino" asp-for="@ruta.destino">
        </div>
        <div class="col-6 col-md-4 col-lg-4">
          <label for="tiempo_estimado" class="form-label">Digite tiempo estimado:</label>
          <input type="number" class="form-control" id="tiempo_estimado" name="tiempo_estimado" placeholder="Tiempo_estimado" asp-for="@ruta.tiempo_estimado">
        </div>
      </div>
      <br>

    </div>


    <hr>
    <button type="submit" class="btn btn-success" style="font-family: cursive;color:black">  &nbspEnviar&nbsp  </button>


  </form>
</div>